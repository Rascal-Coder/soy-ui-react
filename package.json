{
  "name": "soy-ui-react",
  "type": "module",
  "packageManager": "pnpm@10.4.1",
  "license": "MIT",
  "keywords": ["UI", "UnoCSS", "shadcn-ui", "react", "vite"],
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=9.12.0"
  },
  "scripts": {
    "build": "turbo-run build",
    "check:type": "turbo run typecheck",
    "clean": "node scripts/clean.mjs",
    "commit": "soy git-commit",
    "commit:zh": "soy git-commit -l=zh-cn",
    "dev": "turbo-run dev",
    "lint": "eslint . --fix",
    "postinstall": "pnpm -r run stub --if-present",
    "preinstall": "npx only-allow pnpm",
    "prepare": "simple-git-hooks",
    "preview": "turbo-run preview",
    "release": "soy release",
    "update-pkg": "soy update-pkg"
  },
  "dependencies": {
    "@unocss/reset": "66.0.0",
    "unbuild": "^3.5.0"
  },
  "devDependencies": {
    "@soybean-ui/tsconfig": "workspace:*",
    "@soybeanjs/cli": "workspace:*",
    "@soybeanjs/eslint-config": "workspace:*",
    "@types/node": "22.13.5",
    "@unocss/core": "^66.1.3",
    "boxen": "8.0.1",
    "cac": "6.7.14",
    "execa": "9.5.2",
    "lint-staged": "15.4.3",
    "simple-git-hooks": "2.11.1",
    "tsx": "4.19.3",
    "turbo": "^2.5.4",
    "typescript": "5.7.3",
    "unocss": "66.0.0",
    "unocss-preset-animations": "1.1.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "*"
      }
    },
    "neverBuiltDependencies": ["canvas", "node-gyp"]
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm soy git-commit-verify",
    "pre-commit": "pnpm check:type && pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
